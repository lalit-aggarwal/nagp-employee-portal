<!doctype html>
<html lang="en">

<head>
  <title>Careers - Job Portal</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="/css/custom-bs.css">
  <link rel="stylesheet" href="/css/jquery.fancybox.min.css">
  <link rel="stylesheet" href="/css/bootstrap-select.min.css">
  <link rel="stylesheet" href="/fonts/icomoon/style.css">
  <link rel="stylesheet" href="/fonts/line-icons/style.css">
  <link rel="stylesheet" href="/css/owl.carousel.min.css">
  <link rel="stylesheet" href="/css/animate.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body id="top">
  <div class="site-wrap">
    <div class="site-mobile-menu site-navbar-target">
      <div class="site-mobile-menu-header">
        <div class="site-mobile-menu-close mt-3">
          <span class="icon-close2 js-menu-toggle"></span>
        </div>
      </div>
      <div class="site-mobile-menu-body"></div>
    </div> <!-- .site-mobile-menu -->

    <!-- NAVBAR -->
    <header class="site-navbar mt-3">
      <div class="container-fluid">
        <div class="row align-items-center">
          <div class="site-logo col-6"><a href="/project">Careers</a></div>

          <nav class="mx-auto site-navigation">
            <ul class="site-menu js-clone-nav d-none d-xl-block ml-0 pl-0">
              <li><a href="/project" class="nav-link">Project Openings</a></li>
              <li><a href="/add">Add Opening</a></li>
              <li><a href="/user">My Profile</a></li>
            </ul>
          </nav>

          <div class="right-cta-menu text-right d-flex aligin-items-center col-6">
            <div class="ml-auto">
              <a href="/auth/logout" class="btn btn-primary border-width-2 d-none d-lg-inline-block"><span
                  class="mr-2 icon-paper-plane"></span>Logout</a>
            </div>
            <a href="#" class="site-menu-toggle js-menu-toggle d-inline-block d-xl-none mt-lg-2 ml-3"><span
                class="icon-menu h3 m-0 p-0 mt-2"></span></a>
          </div>
        </div>
      </div>
    </header>

    <!-- HOME -->
    <section class="home-section section-hero inner-page overlay bg-image"
      style="background-image: url('/images/hero_1.jpg');" id="home-section">
      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-12">
            <div class="mb-5 text-center">
              <% if (operation == "add") { %>
              <h1 class="text-white font-weight-bold">Add New Opening</h1>
              <% } else if(operation == "update") { %>
              <h1 class="text-white font-weight-bold">Update Opening</h1>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="site-section" id="next-section">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 mb-5 mb-lg-0">
            <% if (operation == "add") { %>
            <form method="POST" action="/project" class="" id="addopening-form">
            <% } else if(operation == "update") { %>
            <form method="POST" action="/project/update/<%= project[0]._id %>" class="" id="addopening-form">
            <% } %>
              <div class="row form-group">
                <div class="col-md-6 mb-3 mb-md-0">
                  <label class="text-black" for="pname">Project Name</label>
                  <% if (operation == "add") { %>
                  <input type="text" name="name" id="pname" class="form-control" required>
                  <% } else if(operation == "update") { %>
                  <input type="text" name="name" id="pname" class="form-control" value="<%= project[0].name %>" required>
                  <% } %>
                </div>
                <div class="col-md-6">
                  <label class="text-black" for="cname">Client Name</label>
                  <% if (operation == "add") { %>
                  <input type="text" name="clientName" id="cname" class="form-control" required>
                  <% } else if(operation == "update") { %>
                  <input type="text" name="clientName" id="cname" class="form-control" value="<%= project[0].clientName %>" required>
                  <% } %>
                </div>
              </div>
    
              <div class="row form-group">
                <div class="col-md-12">
                  <label class="text-black" for="tech">Technology</label>
                  <% if (operation == "add") { %>
                  <input type="text" name="tech" id="tech" class="form-control" required>
                  <% } else if(operation == "update") { %>
                  <input type="text" name="tech" id="tech" class="form-control" value="<%= project[0].tech %>" required>
                  <% } %>
                </div>
              </div>
    
              <div class="row form-group">
                <div class="col-md-12">
                  <label class="text-black" for="subject">Role</label>
                  <% if (operation == "add") { %>
                  <input type="subject" name="role" id="role" class="form-control" required>
                  <% } else if(operation == "update") { %>
                  <input type="subject" name="role" id="role" class="form-control" value="<%= project[0].role %>" required>
                  <% } %>
                </div>
              </div>
    
              <div class="row form-group">
                <div class="col-md-12">
                  <label class="text-black" for="message">Job Description</label>
                  <% if (operation == "add") { %>
                  <textarea name="desc" id="description" cols="30" rows="7" class="form-control"
                    placeholder="Write your job description here..." required></textarea>
                  <% } else if(operation == "update") { %>
                  <textarea name="desc" id="description" cols="30" rows="7" class="form-control"
                      placeholder="Write your job description here..." required><%= project[0].desc %></textarea>
                  <% } %>
                </div>
                <% if (operation == "update") { %>
                <div class="row form-group">
                  <div class="col-md-12">
                    <br/>
                  <label class="text-black" for="message">&nbsp;&nbsp;&nbsp;Status</label>
                    <br/>&nbsp;&nbsp;
                    <input
                    type="radio"
                    name="status"
                    id="open"
                    value="open"
                    required
                    <% if(project[0].status == "open"){%>
                      <%="checked"%>
                  <%}%>
                  />
                  <label for="agree-term" 
                    ><span><span></span></span>Open</label
                  >
                  <input
                    type="radio"
                    name="status"
                    id="closed"
                    value="closed"
                    required
                    <% if(project[0].status == "closed"){%>
                      <%="checked"%>
                    <%}%>
                  />
                  <label for="agree-term" 
                    ><span><span></span></span>Closed</label>
                </div>
                </div>
                <% } %>
              </div>
    
              <div class="row form-group">
                <div class="col-md-12">
                  <% if (operation == "add") { %>
                  <input type="submit" value="Add Opening" class="btn btn-primary btn-md text-white">
                  <% } else if(operation == "update") { %>
                  <input type="submit" value="Update Opening" class="btn btn-primary btn-md text-white">
                  <% } %>
                </div>
              </div>
            </form>
          </div>
         
          </div>
        </div>
      </div>
    </section>

    <footer class="site-footer">
      <div class="container">
        <div class="row text-center">
          <div class="col-12">
            <p>
              <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
              Copyright &copy;
              <script>document.write(new Date().getFullYear());</script> All rights reserved 
            </p>
          </div>
        </div>
      </div>
    </footer>
  </div>

  <!-- SCRIPTS -->
  <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="/js/isotope.pkgd.min.js"></script>
  <script src="/js/stickyfill.min.js"></script>
  <script src="/js/jquery.fancybox.min.js"></script>
  <script src="/js/jquery.easing.1.3.js"></script>

  <script src="/js/jquery.waypoints.min.js"></script>
  <script src="/js/jquery.animateNumber.min.js"></script>
  <script src="/js/owl.carousel.min.js"></script>
  <script src="/js/main.js"></script>
  <script src="/js/custom.js"></script>
</body>
</html>